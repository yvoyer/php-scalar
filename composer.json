{
    "name": "star/php-scalar",
    "description": "Library that wraps scalar objects to be used as immutable objecs.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannick Voyer",
            "homepage": "https://github.com/yvoyer"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Star\\Component\\PhpType\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\PhpType\\": "tests"
        }
    },
    "require": {
        "php": "^7.1",
        "league/fractal": "^0.19.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.36",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan-strict-rules": "^0.12.4",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/extension-installer": "^1.0",
        "infection/infection": "^0.16.4"
    },
    "config": {
        "bin-dir": "bin",
        "sort-package": true
    }
}
